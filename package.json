{
  "name": "dfgroup-monitor",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm-run-all -p umi:build nest:build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"!src/web/.umi\"",
    "dev": "npm-run-all -p umi:dev start:dev copy:imgs",
    "start": "cross-env NODE_ENV=prod node dist/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=prod nest build && node dist/main",
    "umi:dev": "cross-env PORT=8000 APP_ROOT=src/web umi dev",
    "umi:build": "cross-env APP_ROOT=src/web UMI_ENV=prod COMPRESS=none umi build",
    "nest:build": "nest build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" \"!src/web/.umi\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "copy:imgs": "mkdir -p client/imgs && cp -R src/web/assets/imgs/* client/imgs"
  },
  "dependencies": {
    "@ant-design/icons": "^4.4.0",
    "@ant-design/pro-layout": "^6.13.0",
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.5.1",
    "@nestjs/config": "^0.6.1",
    "@nestjs/core": "^7.5.1",
    "@nestjs/mongoose": "^7.2.0",
    "@nestjs/platform-express": "^7.5.1",
    "@nestjs/serve-static": "^2.1.4",
    "@react-hook/mouse-position": "^4.1.0",
    "@sentry/react": "^6.0.2",
    "@sentry/tracing": "^6.0.2",
    "@umijs/plugin-antd": "^0.9.1",
    "@umijs/plugin-layout": "^0.13.5",
    "@umijs/preset-ant-design-pro": "^1.3.0",
    "antd": "^4.11.2",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "dayjs": "^1.10.4",
    "immutability-helper": "^3.1.1",
    "mongoose": "^5.11.6",
    "node-canvas-webgl": "^0.2.6",
    "nodemailer": "^6.4.17",
    "react-color": "^2.19.3",
    "react-dnd": "^11.1.3",
    "react-dnd-html5-backend": "^11.1.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "source-map": "^0.7.3",
    "spritejs": "^3.7.29",
    "tesseract.js": "^2.1.4",
    "umi": "^3.3.7"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.3",
    "@nestjs/testing": "^7.5.1",
    "@types/express": "^4.17.9",
    "@types/hapi__joi": "^17.1.6",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/nodemailer": "^6.4.0",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "antd-dayjs-webpack-plugin": "^1.0.6",
    "cross-env": "^7.0.3",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.8",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
